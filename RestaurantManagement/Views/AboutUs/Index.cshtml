@{
    ViewData["Title"] = "About Us";
}
<!-- About Us Section -->
<div class="about-us-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column (Text Content) -->
            <div class="col-md-6">
                <h2 class="display-4 fw-bold text-dark">About Us</h2>
                <p class="lead text-dark">
                    Welcome to Restaurant booking Management, where we focus on delivering an exceptional dining experience.
                    Our booking management system is designed to streamline the booking process for staff and managers.
                </p>
            </div>

            <!-- Right Column (Image) -->
            <div class="col-md-6">
                <img src="~/Images/RestaurantImages.jpg" alt="Restaurant Image" class="img-fluid" rounded shadow-lg">
            </div>
        </div>
    </div>
</div>

