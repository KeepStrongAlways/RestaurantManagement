@model RestaurantManagement.Models.Table

<h2>Delete Table</h2>

<h3>Are you sure you want to delete this table?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Table Name
        </dt>
        <dd class="col-sm-10">
            @Model.TableNumber
        </dd>
        <dt class="col-sm-2">
            Table Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.TableCapacity
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TableID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


