@model RestaurantManagement.Models.Table

<h2>Edit Table</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TableID" /> <!-- Hidden field to store SubjectID -->

    <div class="form-group">
        <label asp-for="TableNumber" class="control-label"></label>
        <input asp-for="TableNumber" class="form-control" />
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TableCapacity" class="control-label"></label>
        <input asp-for="TableCapacity" class="form-control" />
        <span asp-validation-for="TableCapacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
