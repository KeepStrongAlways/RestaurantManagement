@model IEnumerable<RestaurantManagement.Models.Customer>

<div class="container my-5">
    <h2 class="text-center mb-4">Customers List</h2>

    <!-- Table Styling -->
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerName</td>
                    <td>@customer.Date.ToShortDateString()</td>
                    <td>@customer.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-danger btn-sm ml-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add New Customer Button -->
    <div class="text-center">
        <a asp-action="Create" class="btn btn-success btn-lg shadow">Add New Customer</a>
    </div>
</div>
